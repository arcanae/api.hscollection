{% extends 'base.html.twig' %}

{% block body %}
    <h1>Card</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ card.class }}</td>
            </tr>
            <tr>
                <th>Rarity</th>
                <td>{{ card.rarity }}</td>
            </tr>
            <tr>
                <th>Pvalue</th>
                <td>{{ card.pvalue }}</td>
            </tr>
            <tr>
                <th>Svalue</th>
                <td>{{ card.svalue }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ card.getWebDirectory() }}" alt="{{ card.name }}"></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('card_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('card_edit', { 'id': card.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
